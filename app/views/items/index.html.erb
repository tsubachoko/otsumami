<div class="row">
  <div class="col-md-8">
    <h1>組み合わせ</h1>
    <ul>
      <% @pairings.each do |pairing| %>
        <li><%= "#{pairing.title} : #{pairing.drink.title} × #{pairing.food.title}" %>:</li>
      <% end %>
    </ul>

    <h1>ドリンク</h1>
    <ul>
      <% @drinks.each do |drink| %>
        <li><%= "#{drink.title} : #{drink.content}" %></li>
      <% end %>
    </ul>

    <h1>おつまみ</h1>
    <ul>
      <% @foods.each do |food| %>
        <li><%= "#{food.title} : #{food.content}" %></li>
      <% end %>
    </ul>
  </div>
</div>